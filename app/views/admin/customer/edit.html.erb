<h2><%= @customer.last_name %><%=@customer.first_name%>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <th>会員ID</th>
  <th><%= @customer.id %></th>
  <br/>
  <br/>

  <label for="inputName">氏名</label>
    <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"Name"%>
    <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <br/>
  <br/>

  <label for="inputName_Kana">フリガナ</label>
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputName_kana", placeholder:"Kana"%>
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputName_kana", placeholder:"Kana"%>
  <br/>
  <br/>

  <label for="inputPostal_Code">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_Code", placeholder:"postal_code"%>
  <br/>
  <br/>

  <label for="inputAddress">住所</label>
    <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"address"%>
  <br/>
  <br/>

  <label for="inputTelephone_number">電話番号</label>
    <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"telephone_number"%>
  <br/>
  <br/>

  <label for="inputEmail">メールアドレス</label>
      <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"email"%>
  <br/>
  <br/>
    <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted_is_status, "有効" %>
 <%= f.radio_button :is_deleted,  true %>
<%= f.label :is_active_is_status, "退会" %>
  <br/>
  <br/>

  <%= f.submit '変更をを保存', class: "btn btn-success" %>
  <% end %>