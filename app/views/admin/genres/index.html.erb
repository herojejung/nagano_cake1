<div class="genre-index">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col">
    <h1>ジャンル一覧画面</h1>
  </div>
</div>
<div class="row">
  <div class="col">
    <h2>ジャンル登録</h2>
     <%= form_with model: @genre,url: admin_genres_path do |f| %>
    <%= f.text_field :name %>
  <%= f.submit '新規登録',class:"btn btn-success" %>
<% end %>

<div class="row">
  <div class="col-lg-3 mt-2">
    <table class="table">
      <thead>
        <tr>
        <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  </div>
    </div>
