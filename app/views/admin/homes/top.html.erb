 <div class ="container">
    <div class ="row">
        <div class="col-sm" style= "padding-left: 300px;">
            <div class ="d-flex align-items-center">
              <span class="border border-dark">
         <h2>注文履歴一覧</h2>
        <table class="table">
    <table>
<thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
</span>
  <tbody>
 <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d %T') %></td>
      <td><%= order.name %></td>
      <% @amount = 0 %>
      <% order.order_details.each do |details| %>
        <% @amount += details.amount %>
      <% end %>
      <td><%= @amount %></td>

      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
    </div>
      </div>
        </div>