<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-2 offset-sm-3">
      <h4>商品一覧</h4>
        </div>
         <div class="col-sm-0 px-sm-0 text-right mb-8">
        <%= link_to new_admin_item_path ,class: "btn btn-sm btn-success" do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
<div class="row">
  <div class="col-sm-12 px-sm-6 mx-auto mb-4" style = "padding-left: 350px;">
    <table class="table text-center admin-items mb-5">
      <thead>
        <tr>
          <th>商品ID</th>
            <th>商品名</th>
          <th>税抜価格</th>
        <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
<tbody>
<% @items.each do |item| %>
  <tr>
    <td>
    　 <%= item.id %>
    　   </td>
    　     <td>
    　       <%= link_to admin_item_path(item),class: "text-dark" do %>
              <%= item.name %>
                <% end %>
        　     </td>
            <td>
          <%= item.price %>
        </td>
      <td>
    <%= item.genre.name %>
  </td>
<td>
  <% if item.show_status == "販売中" %>
    <p class="text-success font-weight-bold">販売中</p>
       <% else %>
         <p class="text-danger font-weight-bold">販売停止中</p>
         <% end %>
          </td>
       </tr>
    </tbody>
  <% end %>
</table>
  <%= paginate @items %>
    </div>
  </div>
</div>