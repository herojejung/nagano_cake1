<h2>商品新規登録</h2>
<!-- form_with部分 -->
<%= form_with model: @item, url: admin_items_path do |f| %>
 <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*", class: "w-100" %>

<h4>商品名</h4>
  <%= f.text_field :name %>

<h4>商品説明文</h4>
  <%= f.text_area :introduction %>

<h4>税込価格</h4>
  <a><%= f.text_field :price %>円</a>

<h4>販売ステータス</h4>
<%= f.radio_button :is_active, true %>
<%= f.label :is_active_is_order, "販売中" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active_is_order, "販売停止中" %>

<p>
<%= f.submit '登録', class: "btn btn-success" %>
</p>

<% end %>