<div class="container">
  <div class="row my-4">
    <div class="col-sm-2 px-sm-4 offset-sm-2">
      <h4>マイページ</h4>
     </div>
  </div>
<div class="row">
  <div class="col-sm-2 px-sm-2 offset-sm-1">
    <h4>登録情報</h4>
      </div>
    <div class="col-sm-3 px-sm-0">
  <%= link_to "編集する", edit_public_customers_path,class:"btn btn-success px-4 mb-2" %>
</div>
</div>
<div class="row">
  <div class="col-sm-6 px-sm-0 offset-sm-1">
    <table class="table table-bordered">
    <tbody>
    <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %><%=@customer.first_name%></th>
    </tr>
    <tr>
      <th>カナ</th>
      <th><%= @customer.last_name_kana %><%=@customer.first_name_kana%></th>
    </tr>
      <tr>
       <th>郵便番号</th>
       <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
    </tr>
    <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
    </tr>
    </tbody>
  </table>
</div>
</div>
<div class="row">
  <div class="col-sm-3 px-sm-0 offset-sm-1">配送先</div>
    <div class="col-sm-3 px-sm-0">
    <%= link_to "一覧を見る", public_addresses_path,class:"btn btn-primary mb-2" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-3 px-sm-0 offset-sm-1">注文履歴</div>
     <div class="col-sm-3 px-sm-0">
       <%= link_to "一覧を見る", orders_path,class:"btn btn-primary mb-2" %>
      </div>
    </div>
  </div>
</div>