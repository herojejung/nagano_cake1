<h2>注文情報入力画面</h2>

<%= form_with model: @order, url: orders_path do |f| %>
<h3>支払い方法</h3>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) , {:checked => true} %>
<%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
</br>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

<h3>お届け先</h3>
<%= f.radio_button :delivery_address, :ご自身の住所 , {:checked => true} %>
<%= f.label :ご自身の住所, class: "job_type_label" %>
</br>
〒<%= current_customer.postal_code%>
<%= current_customer.address%>
</br>
</br>

<%= f.radio_button :delivery_address, :登録済住所から選択 %>
<%= f.label :登録済住所から選択, class: "job_type_label" %>
</br>
<%= f.select :delivery_address, options_from_collection_for_select(Address.all, :id, :address_display),size:50%>
</br>
</br>

<%= f.radio_button :delivery_address, :新しいお届け先 %>
<%= f.label :新しいお届け先, class: "job_type_label" %>
</br>
<label for="inputPostal_Code">郵便番号</label>
<%= f.text_field :delivery_postal_code, autofocus: true, id:"inputPostal_Code", placeholder:"00000000"%>
</br>
</br>
<label for="inputAddress">住所</label>
<%= f.text_field :delivery_address, autofocus: true, id:"inputAddress", placeholder:"東京都渋谷区代々木神園町0-0",size:45%>
</br>
</br>
<label for="inputName">宛名</label>
<%= f.text_field :delivery_name, autofocus: true, id:"inputName", placeholder:"Name"%>
<br/>
</br>

<%= f.submit '確認画面へ進む', class: "btn btn-success" %>
<% end %>