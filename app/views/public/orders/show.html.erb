<div class ="container">
  <div class="row"><h2>注文履歴詳細</h2></div>
    <div class="row">
      <div class="col-sm-5 col-md-6 col-lg-6 px-8">
        <span>注文情報</span>
       <table class="table table-bordered">
      <tr>
    <th class="table-active"style="width:20%">注文日</th>
  <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
</tr>
  <tr>
    <th class="table-active"style="width:20%">配送先</th>
      <td>〒<%= @order.postal_code %></br><%= @order.address%></br><%= @order.name%></td>
        </tr>
          <tr>
            <th class="table-active"style="width:20%">支払方法</th>
              <td><%= @order.payment_method_i18n%></td>
                </tr>
                  <tr>
                    <th class="table-active"style="width:20%">ステータス</th>
                      <td><%= @order.status_i18n %></td>
                    </tr>
                  </table>

                </div>
              <div class="col-sm-8 col-md-6 col-lg-3  offset-1">
          <span>請求情報</span>
        <table class="table table-bordered">
      <tr>
    <th class="table-active" style="width:50%">商品合計</th>
  <th><%= @order.bill - @order.shipping_fee  %></th>
</tr>
  <tr>
    <th class="table-active" style="width:50%">配送料</th>
      <th><%= @order.shipping_fee  %></th>
        </tr>
          <tr>
            <th class="table-active" style="width:50%">請求金額合計</th>
              <th><%= @order.bill %></th>
                </tr>
              </table>
            </div>
          </div>

       <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-7 px-6">
    <span>注文内容</span>
  <table class="table table-bordered">
<thead>
  <tr>
    <th class="table-active" style="width:20%">商品</th>
      <th class="table-active" style="width:20%">単価（税込み）</th>
        <th class="table-active" style="width:20%">個数</th>
          <th class="table-active" style="width:20%">小計</th>
            </tr>
        </thead>
      <tr>
    <tbody>
  <% @order.order_details.each do |details| %>
<td><%= details.item.name %></td>
  <td><%= details.item.with_tax_price%></td>
    <td><%= details.amount %></td>
      <td><%= details.subtotal %>円</td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>