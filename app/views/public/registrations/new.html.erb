<div class="container-fluid registration py-4">
  <div class="row">
    <div class="offset-2">
    <h4 class="bg-secondary">新規会員登録</h4>
  </div>
</div>
<div class="row mt-5">
  <div class="offset-3 col-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
      <div class = "row">
    <%= f.label :"名前"%>
  (姓)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
(名)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
</div>
</div>
</br>
<div class="form-group">
  <div class = "row">
    <%= f.label :"フリガナ"%>
      (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
</br>
<div class="form-group">
  <div class="row">
    <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
<br/>
<div class="form-group">
  <div class="row">
    <%= f.label :郵便番号 %>(ハイフンなし）
      <%= f.text_field :postal_code, autofocus: true, autocomplete: ":postal_code" %>
    </div>
  </div>
<br/>
<div class="form-group">
  <div class="row">
    <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, autocomplete: ":address" %>
    </div>
  </div>
<br/>
<div class="form-group">
  <div class="row">
    <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: ":telephone_number" %>
    </div>
  </div>
<br/>
<div class="form-group">
  <div class="row">
    <%= f.label :パスワード%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>
</div>
<br/>
<div class="form-group">
  <div class="row">
    <%= f.label :パスワード %>(確認用)
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
<br/>
<div class="row">
    <%= f.submit "新規登録",class:"btn btn-lg btn-success"  %>
      </div>
    <% end %>
  </div>
</div>
</br>
<div class="row">
    <div class="offset-3 col-5">
      <h2>既に登録済みの方</h2>
      <p>既に登録済みの方は<%= link_to "こちらへ", new_customer_session_path %></p>
    </div>
  </div>
</div>

